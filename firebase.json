{
	"database": {
		"rules": "database.rules.json"
	},
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "/getArticles",
				"function": "getArticles"
			}
		]
	},
	"storage": {
		"rules": "storage.rules"
	},
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	}
}
