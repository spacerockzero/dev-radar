{
  "private": true,
  "name": "dev-radar",
  "version": "0.4.0",
  "license": "MIT",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build",
    "serve": "preact build && serve build --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest",
    "deploy": "PREACT_APP_ENV=production npm run build && firebase deploy --only hosting"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "repository": "https://github.com/spacerockzero/dev-radar",
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-synacor": "^3.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-rc.6",
    "preact-render-spy": "^1.2.1",
    "serve": "^11.1.0"
  },
  "dependencies": {
    "asyncawait": "^1.0.6",
    "case": "^1.6.2",
    "firebase": "^4.8.0",
    "lodash-es": "^4.17.4",
    "lodash.map": "^4.6.0",
    "lodash.sortby": "^4.7.0",
    "preact": "^10.0.1",
    "preact-cli-plugin-env-vars": "^1.2.1",
    "preact-compat": "^3.17.0",
    "preact-material-components": "^1.2.4",
    "preact-render-to-string": "^5.1.0",
    "preact-router": "^3.0.0",
    "react-infinite-scroller": "^1.1.3",
    "react-lazy-load": "^3.0.13",
    "react-virtual-list": "^2.2.4"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
